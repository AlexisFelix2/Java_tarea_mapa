<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="12dp"
    android:background="@drawable/background_gradient"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <!-- T铆tulo m谩s compacto -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:gravity="center"
            android:text="Rutas Mapas"
            android:textColor="@color/text_primary"
            android:textSize="22sp"
            android:textStyle="bold" />

        <!-- Card compacta para Informaci贸n de Ruta -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="@color/background_secondary">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Tiempo estimado -->
                <TextView
                    android:id="@+id/textViewTiempo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Selecciona puntos en el mapa"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_accent"
                    android:gravity="center"
                    android:layout_marginBottom="12dp"
                    android:padding="8dp"
                    android:background="@drawable/card_background" />

                <!-- Selecci贸n de transporte compacta -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginBottom="8dp">

                    <!-- Caminar -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/btnCaminar"
                        android:layout_width="0dp"
                        android:layout_height="70dp"
                        android:layout_weight="1"
                        android:layout_margin="4dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="4dp"
                        android:onClick="onSeleccionarTransporte">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:background="@drawable/transport_button_selector"
                            android:padding="8dp">

                            <ImageView
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:src="@drawable/ic_walk"
                                android:layout_marginBottom="4dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Caminar"
                                android:textSize="11sp"
                                android:textStyle="bold"
                                android:textColor="@color/text_primary"
                                android:gravity="center" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Bicicleta -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/btnBicicleta"
                        android:layout_width="0dp"
                        android:layout_height="70dp"
                        android:layout_weight="1"
                        android:layout_margin="4dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="4dp"
                        android:onClick="onSeleccionarTransporte">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:background="@drawable/transport_button_selector"
                            android:padding="8dp">

                            <ImageView
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:src="@drawable/ic_bike"
                                android:layout_marginBottom="4dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Bicicleta"
                                android:textSize="11sp"
                                android:textStyle="bold"
                                android:textColor="@color/text_primary"
                                android:gravity="center" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Auto -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/btnAuto"
                        android:layout_width="0dp"
                        android:layout_height="70dp"
                        android:layout_weight="1"
                        android:layout_margin="4dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="4dp"
                        android:onClick="onSeleccionarTransporte">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:background="@drawable/transport_button_selector"
                            android:padding="8dp">

                            <ImageView
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:src="@drawable/ic_car"
                                android:layout_marginBottom="4dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Autom贸vil"
                                android:textSize="11sp"
                                android:textStyle="bold"
                                android:textColor="@color/text_primary"
                                android:gravity="center" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <!-- Informaci贸n del transporte seleccionado compacta -->
                <LinearLayout
                    android:id="@+id/layoutTransporteInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/transport_selected_background"
                    android:padding="12dp"
                    android:visibility="gone"
                    android:layout_marginTop="8dp">

                    <ImageView
                        android:id="@+id/iconTransporte"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginEnd="12dp"
                        android:src="@drawable/ic_map" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txtTransporteNombre"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Transporte"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_primary" />

                        <TextView
                            android:id="@+id/txtTransporteDetalle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Detalles del viaje"
                            android:textSize="12sp"
                            android:textColor="@color/text_secondary" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Botones de Acci贸n compactos -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <Button
                android:id="@+id/buttonCambiarVista"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:text=" Vista"
                android:textAllCaps="false"
                android:background="@drawable/button_primary"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:layout_marginEnd="6dp"
                android:onClick="CambiarVista" />

            <Button
                android:id="@+id/buttonReset"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:text=" Reset"
                android:textAllCaps="false"
                android:background="@drawable/button_secondary"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:layout_marginStart="6dp"
                android:onClick="Reset" />
        </LinearLayout>

        <!-- Mapa PRINCIPAL MUCHO MS GRANDE -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="400dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="12dp"
            app:cardBackgroundColor="@color/background_secondary">

            <fragment
                android:id="@+id/mapa"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </androidx.cardview.widget.CardView>

        <!-- Instrucciones compactas -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" Toca el mapa para seleccionar punto de partida y destino"
            android:textSize="12sp"
            android:gravity="center"
            android:textColor="@color/text_secondary"
            android:layout_marginTop="12dp"
            android:padding="8dp"
            android:background="@drawable/card_background" />

    </LinearLayout>
</ScrollView>